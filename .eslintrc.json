{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "standard"
    ],
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "parserOptions": {
                "project": "./tsconfig.json"
            }
        }
    ],
    "ignorePatterns": [
        "node_modules/",
        "dist/"
    ],
    "rules": {
        "semi": ["error","always"],
        "quotes": ["error","double"],
        "no-useless-constructor": "off"
    }
}